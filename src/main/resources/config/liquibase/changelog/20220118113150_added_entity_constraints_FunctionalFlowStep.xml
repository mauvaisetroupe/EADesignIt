    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity FunctionalFlowStep.
    -->
    <changeSet id="20220118113150-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="flow_interface_id"
                                 baseTableName="flowstep"
                                 constraintName="fk_flowstep__flow_interface_id"
                                 referencedColumnNames="id"
                                 referencedTableName="interface"
                                 />

        <addForeignKeyConstraint baseColumnNames="group_id"
                                 baseTableName="flowstep"
                                 constraintName="fk_flowstep__group_id"
                                 referencedColumnNames="id"
                                 referencedTableName="flow_group"
                                 />

        <addForeignKeyConstraint baseColumnNames="flow_id"
                                 baseTableName="flowstep"
                                 constraintName="fk_flowstep__flow_id"
                                 referencedColumnNames="id"
                                 referencedTableName="flow"
                                 />
    </changeSet>
</databaseChangeLog>
