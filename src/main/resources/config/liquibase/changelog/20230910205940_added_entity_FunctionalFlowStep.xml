    <!--
        Added the entity FunctionalFlowStep.
    -->
    <changeSet id="20230910205940-1" author="jhipster">
        <createTable tableName="flowstep">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="varchar(500)">
                <constraints nullable="true" />
            </column>
            <column name="step_order" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="flow_interface_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="group_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="flow_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->
